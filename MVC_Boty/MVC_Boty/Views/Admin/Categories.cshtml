@model List<CategoriesModel>
@{
    ViewData["Title"] = "Categories";
}

@section categorystyles {
    <link rel="stylesheet" href="~/css/Categories.css" />
}

@foreach (var category in Model)
{
    <div class="card mb-3 shadow-sm">
        <div class="card-body">
            <h5 class="card-title">@category.Name</h5>

            <p class="card-text text-muted">
                @category.Description
            </p>

            <div class="d-flex gap-2">
                <a asp-action="DeleteCategory" asp-route-id="@category.Id" class="btn btn-danger btn-sm">
                    Smazat
                </a>
                <a asp-action="EditCategory" asp-route-id="@category.Id" class="btn btn-warning btn-sm">
                    Upravit
                </a>
            </div>
        </div>
    </div>

}