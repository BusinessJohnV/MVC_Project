@model AccountModel

@{
    ViewData["Title"] = "Profile";
}

@section profilestyles {
    <link rel="stylesheet" href="~/css/Profile.css" />
}

<form asp-action="Update" class="profile-form">
    <h2 class="form-title">Můj profil</h2>

    <div class="form-group">
        <label asp-for="Username">Uživatelské jméno</label>
        <input asp-for="Username" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Password">Heslo</label>
        <input asp-for="Password" type="password" class="form-control" />
    </div>

    <div class="form-row">
        <div class="form-group">
            <label asp-for="Name">Jméno</label>
            <input asp-for="Name" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Surname">Příjmení</label>
            <input asp-for="Surname" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" type="email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Phone">Telefon</label>
        <input asp-for="Phone" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Country">Země</label>
        <input asp-for="Country" list="countries" class="form-control" />
        <datalist id="countries">
            <option value="Česká republika"></option>
            <option value="Slovensko"></option>
        </datalist>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn-primary">Uložit změny</button>
        <button type="reset" class="btn-secondary">Zrušit</button>
    </div>
</form>
